extends ../layouts/application.pug

block header
  = t('views.users.index.title')

block content
  .table-responsive
    table.table.table-borderless.table-striped.mt-5.bg-white
      thead
        tr
          th= t('widgets.userTable.header.id')
          th= t('widgets.userTable.header.name')
          th= t('widgets.userTable.header.email')
          th= t('widgets.userTable.header.createdAt')
          th= t('widgets.userTable.header.actions')
      tbody
        each user in users
          tr
            td= user.id
            td= formatName(user)
            td= user.email
            td= formatDate(user.createdAt)
            td
              .d-flex.flex-wrap
                a(href=route('editUser', { id: user.id }) class='btn btn-primary me-1')= t('common.buttons.edit')
                +buttonTo(route('deleteUser', { id: user.id }), 'delete')(class='btn btn-danger' value=t('common.buttons.delete'))
